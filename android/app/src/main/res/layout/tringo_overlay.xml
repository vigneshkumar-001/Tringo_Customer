<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlayRootFull"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:fitsSystemWindows="true">

    <!-- ✅ Outside click layer (close) -->
    <View
        android:id="@+id/outsideCloseLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true" />

    <!-- ✅ CENTER CARD (NOT BOTTOM) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rootCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="28dp"
        app:cardElevation="14dp"
        app:cardUseCompatPadding="false">

        <!-- ✅ IMPORTANT: Eat clicks inside card -->
        <RelativeLayout
            android:id="@+id/cardContentRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true">

            <!-- CLOSE BUTTON -->
            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@drawable/bg_close_circle"
                android:padding="7dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="@android:color/white"
                android:contentDescription="close"
                android:clickable="true"
                android:focusable="true"
                android:elevation="30dp"
                android:translationZ="30dp" />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_overlay_gradient"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="14dp"
                android:paddingBottom="16dp">

                <!-- ================= HEADER BUSINESS ================= -->
                <RelativeLayout
                    android:id="@+id/headerBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/logoCardBusiness"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/logoImageBusiness"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@android:drawable/ic_menu_gallery" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/headerRightBusiness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/logoCardBusiness"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="54dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingTop="6dp">

                        <TextView
                            android:id="@+id/smallTopText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tringo Identifies"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:alpha="0.95" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/businessNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loading"
                                android:textColor="@android:color/white"
                                android:textSize="23sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/titleArrow"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="6dp"
                                android:src="@drawable/ic_chevron_right"
                                android:tint="@android:color/white" />
                        </LinearLayout>

                        <!-- ✅ Call + Chat -->
                        <LinearLayout
                            android:id="@+id/actionsBizRow"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/btnCallBiz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bg_btn_call_figma"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription="call"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_call_png" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:text="Call"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <LinearLayout
                                android:id="@+id/btnWhatsappBiz"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bg_btn_chat_figma"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription="chat"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_whatsapp_png" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:text="Chat"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ratingChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_chip_header"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:text="0 ★ 0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/metaText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Opens Upto --"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:alpha="0.95" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <!-- ================= HEADER PERSON ================= -->
                <RelativeLayout
                    android:id="@+id/headerPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/logoCardPerson"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/logoImagePerson"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@android:drawable/ic_menu_gallery" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/headerRightPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/logoCardPerson"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="54dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingTop="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tringo Identifies"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:alpha="0.95" />

                        <TextView
                            android:id="@+id/personNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Unknown Caller"
                            android:textColor="@android:color/white"
                            android:textSize="23sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/actionsPersonRow"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/btnCallPerson"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bg_btn_call_figma"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription="call"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_call_png" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:text="Call"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <LinearLayout
                                android:id="@+id/btnWhatsappPerson"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bg_btn_chat_figma"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription="chat"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_whatsapp_png" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:singleLine="true"
                                    android:text="Chat"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <!-- Divider + Ads title -->
                <View
                    android:id="@+id/dividerLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="12dp"
                    android:background="#33FFFFFF" />

                <TextView
                    android:id="@+id/adsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Advertisements"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/adsRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>




